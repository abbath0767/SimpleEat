<android.support.v7.widget.CardView
    android:id="@+id/basket_fragment_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="6dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/basket_fragment_card_view_text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe Name"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/bastet_card_view_element_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/basket_fragment_card_view_text_view_title"
            android:layout_alignStart="@+id/basket_fragment_card_view_text_view_title">

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>